<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%= cuisine.name %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
      </head>
    <body>
        <%- include('partials/header') %> 
        <div class="content">
            <div class="cuisine-content-wrapper">
                <div class='cuisine-content'>
                    <h2><%= cuisine.name.charAt(0).toUpperCase() + cuisine.name.slice(1) %> Cuisine</h2>
                    <h5><em><%= cuisine.description %> </em></h5>
                    <% if(cuisine.image) {%>
                        <img class='cuisine-image' src=<%=cuisine.image%> alt=""/>
                    <%}else{%>
                        <div class="default-img">
                            <h1>No Image Available</h1>
                        </div>
                    <%}%>
                    <div class='cuisine-meals'> 
                        <h3>Meals</h3>
                        <ul>
                            <% if(cuisineMeals.length === 0) { %>
                                <em>This Cuisine currently has no associated meals</em>
                            <%}else{%>
                                <% cuisineMeals.forEach((meal)=>{ %> 
                                    <li><a href=<%= meal.url %> ><%= meal.name %></a></li>
                                <% }) %> 
                            <%}%>
                        </ul>
                    </div>
                    <a style="font-weight: bold; color: red" href=<%=cuisine.url + "/delete"%>>Delete Cuisine</a>
                    <a style="font-weight: bold; color: blue" href=<%=cuisine.url + "/update"%>>Update Cuisine</a>
                </div>
            </div>
        </div>
        <%- include('partials/footer') %> 
    </body>
</html>